#!/bin/bash

# Navigate to the filebuddy directory
cd /Users/fredcaseyhousand/Desktop/github/filebuddy

# Function to kill the server
kill_server() {
    echo "ğŸ›‘ Stopping FileBuddy server..."
    
    # Find and kill the process running on port 3000
    PID=$(lsof -ti:3000)
    if [ ! -z "$PID" ]; then
        kill -TERM $PID 2>/dev/null
        sleep 2
        
        # Check if it's still running, force kill if necessary
        if kill -0 $PID 2>/dev/null; then
            echo "âš ï¸  Force killing server..."
            kill -KILL $PID 2>/dev/null
        fi
        echo "âœ… Server stopped successfully!"
    else
        echo "âŒ No server running on port 3000"
    fi
}

# Check for kill command
if [ "$1" = "kill" ]; then
    kill_server
    exit 0
fi

# Check if server is already running
if curl -s http://localhost:3000/api/status > /dev/null 2>&1; then
    echo "âœ… Server is already running!"
else
    echo "ğŸš€ Starting FileBuddy server..."
    # Start the server in background
    npm run gui > /dev/null 2>&1 &
    # Wait a moment for server to start
    sleep 3
fi

# Open browser
echo "ğŸŒ Opening FileBuddy in browser..."
open http://localhost:3000